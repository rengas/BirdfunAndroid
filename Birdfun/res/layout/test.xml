<SlidingDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingDrawer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:content="@+id/content"
    android:gravity="center_horizontal"
    android:handle="@+id/handle"
    android:orientation="horizontal"
    android:rotation="180"
    android:topOffset="600dp" >

    <LinearLayout
        android:id="@+id/handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom" 
        android:bottomOffset="200dp">

        <ImageView
            android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:rotation="180"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

	       <LinearLayout
	           android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	           android:gravity="top|end"
	           android:orientation="vertical"
	           android:rotation="180" >
	
	    <!-- Button to Save The Eggs -->
	
  <Button
        android:id="@+id/btnplays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Play" />

    <!-- Button to Fantastic feathers acitivity -->

    <Button
        android:id="@+id/btnlogins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Log in" />

    <!-- Button to The weapon acitivity -->

    <Button
        android:id="@+id/btnregiste"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Register" />

    <!-- Button to Login Activity -->

    <Button
        android:id="@+id/btnleaderboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Leader Board" />

    <!-- Button to Login Activity -->

    <Button
        android:id="@+id/btnquit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Quit" />
	
	</LinearLayout>
</SlidingDrawer>